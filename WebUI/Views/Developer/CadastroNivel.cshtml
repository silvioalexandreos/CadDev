@{
    ViewData["Title"] = "Cadastro Nível";
    List<Business.Report.Level> levels = ViewBag.Listas;
}
@model Database.Level;

<!DOCTYPE html>
<html>
<head>
    <title>Cadastro Nível</title>
    <link rel="stylesheet" type="text/css" href="~/css/Reset.css">
    <link rel="stylesheet" type="text/css" href="~/css/Style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <h1 class="titulo-pagina">Cadastro de Nível</h1>
    </header>

    <main>
        <div>
            <table class="table">
                <tr>
                    <td>Descrição</td>
                    <td>Valor horas</td>
                </tr>
                @foreach (var level in levels)
                {
                    <tr>
                        <td>@level.Descricao</td>
                        <td>@level.VlrHora</td>
                    </tr>
                }
            </table>
        </div>
        
        <form class="form" asp-action="SalvarNivel" method="post">

            <label for="level" class="label">Nivél</label>
            <input type="text" class="input-padrao" id="level" required asp-for="@Model.Descricao"/>


            <label for="valor-hora" class="label">Valor hora</label>
            <input type="number" class="input-padrao" id="valor-hora" required placeholder="25" asp-for="@Model.VlrHora"/>

            <input type="submit" value="Salvar" class="salvar" />
        </form>

    </main>
</body>
</html>

